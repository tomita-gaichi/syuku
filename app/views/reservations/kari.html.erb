<div class="container-fiuld user">
  <div class="row">
    <div class="col-md-12 user-view">
      <div class="user-view-box">
        <div class="update-content">
          <div class="row">
            <label class="col-md-3">予約した部屋</label>
            <div class="col-md-9">
            <%= link_to("/reservations/#{@reservation.post.id}/rooms") do %>
              <%= @reservation.post.name %>
            <% end %>
            </div>
          </div>
        </div>
        <div class="update-content">
          <div class="row">
            <label class="col-md-3">開始日</label>
            <div class="col-md-9">
              <%= @reservation.start_date %>
            </div>
          </div>
        </div>
        <div class="update-content">
          <div class="row">
            <label class="col-md-3">終了日</label>
            <div class="col-md-9">
              <%= @reservation.end_date %>
            </div>
          </div>
        </div>
        <div class="update-content">
          <div class="row">
            <label class="col-md-3">価格</label>
            <div class="col-md-9">
              <%= ((@reservation.end_date - @reservation.start_date)*@reservation.person*@reservation.post.price).to_int %>円
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
